{
  "id": "desktop-pet",
  "name": "桌面宠物",
  "description": "可爱的桌面宠物，支持拖拽移动",
  "version": "1.0.0",
  "icon": "/icons/pet.svg",
  "type": "system-component",
  "entry": "DesktopPetComponent",
  "autoStart": true,
  "isSystemComponent": true,
  "showOnDesktop": false,
  "systemComponent": {
    "position": {
      "type": "desktop",
      "anchor": "bottom-right"
    },
    "display": {
      "always": true,
      "draggable": true,
      "zIndex": 950,
      "opacity": 0.9
    },
    "size": {
      "width": 80,
      "height": 80
    },
    "behavior": {
      "clickThrough": false,
      "showOnHover": false
    }
  }
}
