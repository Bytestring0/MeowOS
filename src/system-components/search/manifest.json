{
  "id": "system-search",
  "name": "搜索",
  "description": "桌面搜索组件，支持多搜索引擎",
  "version": "1.0.0",
  "icon": "icons/search.svg",
  "type": "system-component",
  "entry": "SearchComponent",
  "autoStart": true,
  "isSystemComponent": true,
  "showOnDesktop": false,
  "systemComponent": {
    "position": {
      "type": "desktop",
      "anchor": "bottom-right"
    },
    "display": {
      "always": true,
      "draggable": true,
      "opacity": 1,
      "zIndex": 100
    },
    "size": {
      "width": 60,
      "height": 60
    },
    "behavior": {
      "clickThrough": false,
      "expandable": true
    }
  }
}